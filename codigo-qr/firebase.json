{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "README.md",
      "GUIA-FIREBASE.md",
      "FIREBASE-RAPIDO.txt",
      "NUEVO-DISENO.md",
      "CAMBIOS-REALIZADOS.md",
      "PROYECTO-COMPLETO.txt",
      "INSTRUCCIONES.html",
      "package.json",
      "package-lock.json",
      ".firebaserc"
    ],
    "rewrites": [
      {
        "source": "/admin",
        "destination": "/admin.html"
      },
      {
        "source": "/persona",
        "destination": "/persona.html"
      }
    ]
  }
}
